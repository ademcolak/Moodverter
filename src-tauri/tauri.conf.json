{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Moodverter",
  "version": "0.1.0",
  "identifier": "com.ademcolak.moodverter",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Moodverter",
        "label": "main",
        "width": 400,
        "height": 500,
        "visible": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' https://www.youtube.com; img-src 'self' https://i.scdn.co https://i.ytimg.com https://img.youtube.com data:; connect-src 'self' https://api.spotify.com https://accounts.spotify.com https://api.openai.com https://www.youtube.com https://noembed.com http://localhost:11434; style-src 'self' 'unsafe-inline'; frame-src https://www.youtube.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": ""
    }
  }
}
