{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Moodverter",
  "version": "0.1.0",
  "identifier": "com.ademcolak.moodverter",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Moodverter",
        "label": "main",
        "width": 400,
        "height": 500,
        "minWidth": 320,
        "minHeight": 400,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://i.scdn.co data:; connect-src 'self' https://api.spotify.com https://accounts.spotify.com https://api.openai.com; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": ""
    }
  }
}
